<body>
    <h1 align="center">Registre User</h1>
    <div id="Form">
        <form method="post" action="/addUser" class="mt-5">
            <table align="center">
                <tr>
                    <td>User Name</td>
                    <td><input type="text" name="name" /></td>
                </tr>
                <tr>
                    <td>User Email</td>
                    <td><input type="email" name="email" /></td>
                </tr>
                <tr>
                    <td>User Password</td>
                    <td><input type="password" name="password" /></td>
                </tr>
                <tr>
                    <td>Confirm Password</td>
                    <td><input type="password" name="cpassword" /></td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input class="btn btn-success" type="submit" value="Register"/>
                        <button class="btn btn-danger"><a class="text-white text-decoration-none" href="/login">Allready Hanve Account</a></button>
                    </td>
                </tr>
            </table>
        </form>
    </div>
    </body>
    

